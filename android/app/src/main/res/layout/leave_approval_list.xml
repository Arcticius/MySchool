<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leave_approval_layout"
    android:orientation="horizontal"
    android:layout_width="390dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@drawable/custom_spinner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_approval_name"
            android:text="Name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#343434"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/approval_name"
            android:text="sample"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#343434"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_toRightOf="@id/text_approval_name"/>

        <TextView
            android:id="@+id/text_approval_uid"
            android:text="uid"
            android:layout_below="@id/text_approval_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#343434"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/approval_uid"
            android:text="sample"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#343434"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:layout_toRightOf="@id/text_approval_uid"
            android:layout_below="@id/approval_name"/>

        <TextView
            android:id="@+id/text_approval_date"
            android:text="Leave Date"
            android:layout_below="@id/text_approval_uid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#343434"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/approval_date"
            android:text="sample"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#343434"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:layout_toRightOf="@id/text_approval_date"
            android:layout_below="@id/approval_uid"/>

        <TextView
            android:id="@+id/text_approval_reason"
            android:text="Reason"
            android:layout_below="@id/text_approval_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#343434"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/approval_reason"
            android:text="sample"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#343434"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="17dp"
            android:layout_toRightOf="@id/text_approval_reason"
            android:layout_below="@id/approval_date"/>

        <Button
            android:id="@+id/button_approval_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/approval_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="Approve"
            android:background="@drawable/btn_rectangle"
            android:textColor="@color/white"
            android:focusable="false"/>

        <Button
            android:id="@+id/button_approval_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/approval_date"
            android:layout_below="@id/button_approval_approve"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Reject"
            android:background="@drawable/btn_rectangle"
            android:textColor="@color/white"
            android:focusable="false"/>

    </RelativeLayout>

</LinearLayout>