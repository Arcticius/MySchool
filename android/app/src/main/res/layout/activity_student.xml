<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.StudentActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_spinner"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/user_image"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            />
        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/user_image"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_t1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Batch"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#343434"/>
            <TextView
                android:id="@+id/text_batch"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_t1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Java-1"
                android:textSize="17dp"
                android:textColor="#343434"/>

            <TextView
                android:id="@+id/text_t2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Roll Number"
                android:layout_below="@id/text_t1"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#343434"/>
            <TextView
                android:id="@+id/text_rollno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_t2"
                android:layout_below="@id/text_batch"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="20181620310"
                android:textSize="17dp"
                android:textColor="#343434"/>
            <TextView
                android:id="@+id/text_t3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Balance Leave"
                android:layout_below="@id/text_t2"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#343434"/>
            <TextView
                android:id="@+id/text_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_t3"
                android:layout_below="@id/text_rollno"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="5 Days"
                android:textSize="17dp"
                android:textColor="#343434"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_spinner"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_t4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_t4"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Hudson Han"
            android:textSize="17dp"
            android:textColor="#343434"/>

        <TextView
            android:id="@+id/text_t5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_t4"
            android:text="Date of Birth"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/text_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_t5"
            android:layout_below="@id/text_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="13/05/2000"
            android:textSize="17dp"
            android:textColor="#343434"/>

        <TextView
            android:id="@+id/text_t6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_t5"
            android:text="Blood Group"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/text_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_t6"
            android:layout_below="@id/text_dob"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="A"
            android:textSize="17dp"
            android:textColor="#343434"/>

        <TextView
            android:id="@+id/text_t7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_t6"
            android:text="E-Mail"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_t7"
            android:layout_below="@id/text_blood"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="xxxxx@gmail.com"
            android:textSize="17dp"
            android:textColor="#343434"/>

        <TextView
            android:id="@+id/text_t8"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_t7"
            android:text="Phone No."
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_t8"
            android:layout_below="@id/text_email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="17300000000"
            android:textSize="17dp"
            android:textColor="#343434"/>

        <TextView
            android:id="@+id/text_t9"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_t8"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_t9"
            android:layout_below="@id/text_phone"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Haikou, Hainan, China"
            android:textSize="17dp"
            android:textColor="#343434"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Update"
            android:background="@drawable/btn_rectangle"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button_apply_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@id/button_update"
            android:text="  Apply Leave  "
            android:background="@drawable/btn_rectangle"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>